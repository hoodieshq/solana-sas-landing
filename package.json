{
  "name": "solana-attestation-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "pnpm run typegen",
    "dev": "next dev --turbopack",
    "prebuild": "pnpm run typegen",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.ts*\"",
    "typegen": "sanity schema extract --path=./src/shared/sanity/schema.json && sanity typegen generate",
    "sanity:dev": "sanity dev",
    "sanity:build": "sanity build",
    "sanity:deploy": "sanity deploy",
    "docs:dev": "vocs dev",
    "docs:build": "vocs build",
    "docs:preview": "vocs preview"
  },
  "dependencies": {
    "@sanity/client": "^6.29.1",
    "@sanity/icons": "^3.7.0",
    "@sanity/image-url": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "copy-to-clipboard": "^3.3.3",
    "next": "15.3.1",
    "next-sanity": "^9.11.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "shiki": "^3.4.2",
    "styled-components": "^6.1.18",
    "vocs": "^1.0.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@sanity/eslint-config-studio": "^5.0.2",
    "@sanity/vision": "^3.88.3",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/node": "^20.17.47",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "eslint": "^9.27.0",
    "eslint-config-next": "15.3.1",
    "prettier": "^3.5.3",
    "sanity": "^3.88.3",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp",
      "unrs-resolver"
    ]
  },
  "prettier": {
    "printWidth": 160,
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "embeddedLanguageFormatting": "auto",
    "singleAttributePerLine": false
  }
}
