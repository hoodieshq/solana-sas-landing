{
  "name": "solana-sas",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "pnpm run typegen",
    "dev": "next dev --turbopack",
    "prebuild": "pnpm run typegen",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.ts*\"",
    "typegen": "sanity schema extract --path=./src/shared/sanity/schema.json && sanity typegen generate",
    "sanity:dev": "sanity dev",
    "sanity:build": "sanity build",
    "sanity:deploy": "sanity deploy"
  },
  "dependencies": {
    "@sanity/client": "^6.29.1",
    "@sanity/image-url": "^1.1.0",
    "next": "15.3.1",
    "next-sanity": "^9.10.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-components": "^6.1.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@sanity/eslint-config-studio": "^5.0.2",
    "@sanity/vision": "^3.87.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "prettier": "^3.5.3",
    "sanity": "^3.87.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "unrs-resolver"
    ]
  },
  "prettier": {
    "printWidth": 160,
    "tabWidth": 4,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "embeddedLanguageFormatting": "auto",
    "singleAttributePerLine": false
  }
}
